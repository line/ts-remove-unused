{
  "name": "tsr",
  "author": "Kazushi Konosu",
  "description": "TypeScript Remove (tsr) is a utility that removes unused code from TypeScript projects – It's like tree shaking, but for source files",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/line/tsr"
  },
  "license": "Apache-2.0",
  "bin": "dist/cli.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/main.js"
  },
  "types": "./dist/main.d.ts",
  "scripts": {
    "lint": "eslint",
    "build": "rm -rf dist && node ./build.js",
    "type-check": "tsc -b",
    "prepublishOnly": "npm run build",
    "test": "npm run build && tsx ./test.js",
    "tsr": "npm run build && node dist/cli.js -p tsconfig.lib.json 'lib/[a-z]+\\.ts'"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.5.5",
    "esbuild": "^0.23.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "strip-ansi": "^7.1.0",
    "tsx": "^4.19.1",
    "typescript-eslint": "^8.14.0"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chalk": "^5.3.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  }
}
